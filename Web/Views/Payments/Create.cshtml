@model Services.Models.Payment

@{
    ViewData["Title"] = "Payment";
}

<h1>Payment</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Room Number</label>
                <input name="RoomId" class="form-control" value="@ViewBag.RoomId" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNumber" class="control-label"></label>
                <select asp-for="EmployeeNumber" class ="form-control" asp-items="ViewBag.EmployeeNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <select asp-for="AccountNumber" class ="form-control" asp-items="ViewBag.AccountNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="AmountCharged" class="control-label"></label>
                <input asp-for="AmountCharged" class="form-control" />
                <span asp-validation-for="AmountCharged" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Paid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
